{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "screens/*": ["screens/*"],
      "utils/*": ["utils/*"],
      "hooks/*": ["hooks/*"],
      "styles/*": ["styles/*"],
      "lang/*": ["lang/*"],
      "routers/*": ["routers/*"],
      "services/*": ["services/*"],
      "assets/*": ["assets/*"]
    }
  }
}
